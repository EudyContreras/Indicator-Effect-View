<resources>
    <declare-styleable name="RippleView">
        <attr name="rv_rippleType" format="enum">
            <enum name="touchRippleOutline" value="0"/>
            <enum name="touchRippleFilled" value="1"/>
            <enum name="indicatorRipple" value="2"/>
        </attr>
        <attr name="rv_rippleRepeatMode" format="enum">
            <enum name="restart" value="1"/>
            <enum name="revert" value="2"/>
        </attr>
        <attr name="rv_rippleShapeType" format="enum">
            <enum name="circle" value="0"/>
            <enum name="rectangle" value="1"/>
        </attr>
        <attr name="rv_autoStartAnimation" format="boolean"/>
        <attr name="rv_useColorInterpolation" format="boolean"/>
        <attr name="rv_showBorderStroke" format="boolean"/>
        <attr name="rv_intervalDelay" format="reference|integer"/>
        <attr name="rv_rippleDuration" format="reference|integer"/>
        <attr name="rv_rippleColor" format="reference|color"/>
        <attr name="rv_rippleStrokeColor" format="reference|color"/>
        <attr name="rv_rippleColorStart" format="reference|color"/>
        <attr name="rv_rippleColorEnd" format="reference|color"/>
        <attr name="rv_rippleCount" format="reference|integer"/>
        <attr name="rv_rippleStrokeWidth" format="reference|dimension"/>
        <attr name="rv_rippleClipRadius" format="reference|dimension"/>
        <attr name="rv_rippleClipWidth" format="reference|dimension"/>
        <attr name="rv_rippleClipHeight" format="reference|dimension"/>
        <attr name="rv_rippleMaxOpacity" format="reference|float"/>
        <attr name="rv_rippleMinOpacity" format="reference|float"/>
        <attr name="rv_rippleMaxRadius" format="reference|dimension"/>
        <attr name="rv_rippleMinRadius" format="reference|dimension"/>
        <attr name="rv_rippleMinWidth" format="reference|dimension"/>
        <attr name="rv_rippleMaxWidth" format="reference|dimension"/>
        <attr name="rv_rippleMinHeight" format="reference|dimension"/>
        <attr name="rv_rippleMaxHeight" format="reference|dimension"/>
        <attr name="rv_rippleRepeatCount" format="reference|integer"/>
        <attr name="rv_rippleCornerRadius" format="reference|dimension"/>
    </declare-styleable>

</resources>
